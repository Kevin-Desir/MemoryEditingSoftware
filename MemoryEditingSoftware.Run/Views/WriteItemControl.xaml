<UserControl x:Class="MemoryEditingSoftware.Run.Views.WriteItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MemoryEditingSoftware.Run.Views">
    <Grid Margin="0" Background="skyblue">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock x:Name="NameTextBlock" Text="Edit item Name" Grid.Column="0" Grid.Row="1" Margin="5" VerticalAlignment="Center" />
        <Button x:Name="ActivateButton" Grid.Column="1" Grid.Row="1" Content="Activate" Padding="5" Margin="5" Width="80" Click="ActivateButton_Click" />
        <Label Content="Value:" Grid.Column="0" Grid.Row="2" Margin="5" VerticalAlignment="Center" />
        <TextBox x:Name="Val" Text="1000000" Grid.Column="1" Grid.Row="2" Margin="5" Padding="4" MaxWidth="150" />
    </Grid>
</UserControl>
