<UserControl x:Class="MemoryEditingSoftware.Run.Views.ReadItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MemoryEditingSoftware.Run.Views"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="250">
    <Grid Margin="0 0 0 20" Background="SkyBlue">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="name" Grid.Column="0" Margin="5" VerticalAlignment="Center" />
        <TextBox x:Name="val" IsReadOnly="True" Grid.Column="1" Margin="5" Padding="4" VerticalAlignment="Center" HorizontalAlignment="Center" MaxWidth="150" />
    </Grid>
</UserControl>
